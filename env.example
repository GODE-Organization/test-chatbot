# Configuración del Bot de Telegram
# Copia este archivo como .env y configura tus valores

# Token del bot (obligatorio)
# Obtén tu token de @BotFather en Telegram
BOT_TOKEN=tu_token_aqui

# Modo de funcionamiento del bot
# true = webhook, false = polling (recomendado para desarrollo)
BOT_USE_WEBHOOK=false

# Configuración de webhook (solo si BOT_USE_WEBHOOK=true)
WEBHOOK_URL=https://tu-dominio.com
WEBHOOK_PORT=3000
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET_TOKEN=tu_secret_token_aqui

# Configuración de base de datos
DATABASE_PATH=./data/bot.db

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=./logs/bot.log

# Entorno de ejecución
NODE_ENV=development

# Configuración de IA Externa (Google Gemini)
# API Key de Google Gemini (obligatorio)
GEMINI_API_KEY=tu_gemini_api_key_aqui

# Timeout para comunicación con IA (en milisegundos)
AI_TIMEOUT_MS=30000

# Número máximo de reintentos para comunicación con IA
AI_MAX_RETRIES=3

# Timeout de conversación (en minutos)
CONVERSATION_TIMEOUT_MINUTES=15